# Database Configuration
MONGODB_URI=mongodb://localhost:27017/livestream_db
MONGODB_DB_NAME=livestream_db

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-super-secret-key-change-in-production
DEBUG=True

# Stream Configuration
STREAM_OUTPUT_DIR=stream_output
MAX_STREAM_DURATION=3600
FFMPEG_PATH=ffmpeg

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_ENABLED=True
STREAM_RATE_LIMIT=10
OVERLAY_RATE_LIMIT=100

# Overlay Configuration
MAX_OVERLAYS=10
MAX_OVERLAY_SIZE=1000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/livestream.log